require "max_crm"

module MaxCrm
  class TestServer
    class << self
      def init
        Fakecrm::Configuration.silent = true

        Infopark::Crm.configure do |config|
          config.login    = "root"
          config.url      = "http://localhost:#{Fakecrm::Configuration.port}/crm"
          config.api_key  = "deadbeef"
        end

        require "fakecrm/embedded"
        Fakecrm.test_embedded_server
      end
    end
  end
end
